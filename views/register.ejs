<% include partials/header.ejs %>

    <div class = 'container'>
        <h4 id = 'login'>This Is Where You Sign Up</h4>
        <form action='/register' method='POST'>
            <div class = 'form-group'>
                <input class = 'form-control' type='text' name='username' placeholder='Pick your username' required>
            </div>
            <div class = 'form-group'>
                <input class = 'form-control' type='password' name='password' minlength = '5' aria-describedby = 'passwordHelp' placeholder='Create a password' required>
                <small id="passwordHelp" class="form-text text-muted">Your passwrod must contain minimum 5 symbols.</small>
            </div>
            <button class = 'btn btn-primary'>Register</button>
        </form>
    </div>
    <a href = '/'>Go back to login page</a>


    <style>
        a{
            position: absolute;
            top: 10px; right: 10px;
        }
    </style>

</body>
