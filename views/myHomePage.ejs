<html>
  <head>
    <title>Fitness App</title>
      <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css">
      <link rel="stylesheet" href="/css/main.css">
  </head>
    <body>
      <h1>Home Page</h1>
      <div>
          <a href='/logout'>Sign out</a>
      </div>
        <div id='breakfast'>
          <h2>Breakfast</h2>
          <button id='breakfast'>Add</button>
          <form action='/myhomepage' method='GET'>
            <button id='yesterday' name='day' value='yesterday'>yesterday</button>
            <button id='today' name='day' value='today'>today</button>
          </form>
            <% user.products.forEach(function(product){%>
              <% let dateToday = new Date()%>
              <% let d = new Date(product.report.date)%>
              <% if(product.report.when == 'breakfast' && (d.getDate() == dateToday.getDate() || day == 'yesterday')){ %>
                <li><%= product.report.food.name%> - <%= d.getDate()%></li>
              <% }%>
            <% }) %>
        </div>
        <div id='lunch'>
          <h2>Lunch</h2>
          <button id='lunch'>Add</button>
            <% user.products.forEach(function(product){%>
              <% if(product.report.when == 'lunch'){ %>
                <li><%= product.report.food.name%></li>
              <% }%>
            <% }) %>
        </div>
        <div id='dinner'>
          <h2>Dinner</h2>
          <button id='dinner'>Add</button>
            <% user.products.forEach(function(product){%>
              <% if(product.report.when == 'dinner'){ %>
                <li><%= product.report.food.name%></li>
              <% }%>
            <% }) %>
        </div>




      <script type="text/javascript" src="javascript/listcollapse.js"></script>
      <script type="text/javascript" src='javascript/addNewProduct.js'></script>
      <!--<script type="text/javascript" src="javascript/calendar.js"></script>-->
    </body>
</html>
